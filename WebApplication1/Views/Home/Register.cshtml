@model WebApplication1.Models.UserAccount

@{
    /**/

    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<!-- Banner -->
<section id="banner1">
    <div class="inner">
        <header>
            <h1>REGISTER ACCOUNT</h1>
        </header>
    </div>
</section>

<section id="main" class="wrapper">
    <div class="inner">

        @using (Html.BeginForm())
        {
            <h2><center>Registration Form<center></h2>

            <fieldset>
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="box">
                    <div class="col-md-offset-2 col-md-10 text-center">
                        <center>
                            <h3>Please fill in all the details</h3>
                            <h5>
                                Enter your email address:  @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control ", @placeholder = "Email Address", @style = "width:500px;" })
                                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger error" })
                            </h5>
                            <h5>
                                Enter your password: @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Email Address", @style = "width:500px;" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger error" })
                            </h5>
                            <h5>
                                Confirm your password:  @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Email Address", @style = "width:500px;" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger error" })
                            </h5>
                        </center>
                    </div>
                 </div>
            </fieldset>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-center">
                    <p>
                        <center>
                            <input type="submit" value="Submit" class="button special" />
                            <input type="reset" value="Reset" class="button special" />
                        </center>

                    </p>
                </div>
            </div>

        }
    </div>
</section>

