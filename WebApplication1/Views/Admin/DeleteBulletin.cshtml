    <div class="inner">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Bulletin</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.newsID)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.newsID)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.newsTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.newsTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.newsDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.newsDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.newsDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.newsDate)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="button special" /> |
                    @Html.ActionLink("Back to Bulletin", "viewBulletin")
