@model WebApplication1.Models.User

@{
    ViewBag.Title = "EditProfile";
}

<!-- Banner -->
<section id="banner1">
    <div class="inner">
        <header>
            <h1>PROFILE</h1>
        </header>
    </div>
</section>

<section id="main" class="wrapper">
    <div class="inner">


        <div class="box">
            <div class="col-md-offset-2 col-md-10 text-center">
                <center>

                    @using (Html.BeginForm("EditProfile", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-horizontal">
                                <h2><center>Edit Profile</center></h2>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="box">
                                    <div class="col-md-offset-2 col-md-10 text-center">
                                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-offset-2 col-md-10 text-center">
                                            @Html.EditorFor(model => model.FirstName, new { style = "width:500px;" })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>



                                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-offset-2 col-md-10 text-center">
                                            @Html.EditorFor(model => model.LastName, new { style = "width:500px;" })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ICNum, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-offset-2 col-md-10 text-center">
                                                @Html.EditorFor(model => model.ICNum, new { style = "width:500px;" })
                                                @Html.ValidationMessageFor(model => model.ICNum, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PhoneNum, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-offset-2 col-md-10 text-center">
                                                @Html.EditorFor(model => model.PhoneNum, new { style = "width:500px;" })
                                                @Html.ValidationMessageFor(model => model.PhoneNum, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-offset-2 col-md-10 text-center">
                                                @Html.EditorFor(model => model.Address, new { style = "width:500px;" })
                                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.profileImg, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-offset-2 col-md-10 text-center">
                                                @Html.EditorFor(model => model.profileImg, new { htmlAttributes = new { @type="file", @onchange= "loadFile(event)", @name="imageName" } })
                                                @Html.ValidationMessageFor(model => model.profileImg, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                             
                                <img id="output" width="200" alt="Your image here" src="#" />
                                <script>
                                    var loadFile = function (event) {
                                        var reader = new FileReader();
                                        reader.onload = function () {
                                            var output = document.getElementById('output');
                                            output.src = reader.result;
                                        };
                                        reader.readAsDataURL(event.target.files[0]);
                                    };
                                </script>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10 text-center">
                                        <p>
                                            <center>
                                                <input type="submit" value="Save" class="button special" />
                                                <input type="reset" value="Reset" class="button special" />
                                            </center>

                                        </p>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                    </center>
            </div>
        </div>
    </div>

</section>
