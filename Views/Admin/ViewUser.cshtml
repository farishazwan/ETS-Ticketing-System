@model IEnumerable<WebApplication1.Models.UserAccount>

@{
    ViewBag.Title = "ViewUser";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- Banner -->
<section id="banner1">
    <div class="inner">
        <header>
            <h1>USER LIST</h1>
        </header>
    </div>
</section>

<div class="box">
    <div class="col-md-offset-2 col-md-10 text-center">
        <center>
            <p>@Html.ActionLink("Create New", "CreateUser", null,  new { @class = "button special" })
                
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Enabled)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Enabled)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                            @Html.ActionLink("Details", "DetailsUser", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
            </center>
</div></div>